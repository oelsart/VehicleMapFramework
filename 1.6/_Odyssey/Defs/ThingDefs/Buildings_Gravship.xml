<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="GravshipComponentBase" MayRequire="Ludeon.RimWorld.Odyssey">
		<defName>VMF_GravshipWheel</defName>
		<label>gravship wheel</label>
		<description>Equipment for the gravship to travel on the ground. It also serves as a thruster for movement in space, and the number of wheels affects the maximum payload and travel speed.\n\n&lt;color=#bb8f04&gt;Maximum payload:&lt;/color&gt; +1500 kg\n&lt;color=#bb8f04&gt;Move speed:&lt;/color&gt; +0.75</description>
		<thingClass>VehicleMapFramework.Building_GravshipWheel</thingClass>
		<designationCategory>VF_Vehicles</designationCategory>
		<rotatable>true</rotatable>
		<blockWind>true</blockWind>
		<canOverlapZones>false</canOverlapZones>
		<graphicData>
			<texPath>VehicleMapFramework/Things/GravshipWheel/GravshipWheel</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(2,1)</drawSize>
		</graphicData>
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<Beauty>-3</Beauty>
			<WorkToBuild>1500</WorkToBuild>
			<Mass>20</Mass>
		</statBases>
		<size>(2,1)</size>
		<fillPercent>0.8</fillPercent>
		<costList>
			<Steel>150</Steel>
			<Chemfuel>50</Chemfuel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<building>
			<isEdifice>false</isEdifice>
			<isAttachment>true</isAttachment>
			<destroySound>BuildingDestroyed_Metal_Big</destroySound>
		</building>
		<placeWorkers>
			<li>VehicleMapFramework.PlaceWorker_AttachedWallPreventOverlap</li>
		</placeWorkers>
		<uiOrder>1030</uiOrder>
		<researchPrerequisites>
			<li>BasicGravtech</li>
		</researchPrerequisites>
		<comps>
			<li Class="CompProperties_GravshipFacility">
				<requiresLOS>false</requiresLOS>
				<maxSimultaneous>200</maxSimultaneous>
				<maxDistance>200</maxDistance>
			</li>
			<li Class = "VehicleMapFramework.CompProperties_BuildableUpgrades">
				<upgrades>
					<li Class = "Vehicles.StatUpgrade">
						<vehicleStats>
							<li>
								<def>MaximumPayload</def>
								<value>1500</value>
							</li>
							<li>
								<def>MoveSpeed</def>
								<value>0.75</value>
							</li>
						</vehicleStats>
					</li>
				</upgrades>
			</li>
		</comps>
	</ThingDef>
</Defs>