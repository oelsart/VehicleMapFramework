<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="GravshipComponentBase" MayRequire="Ludeon.RimWorld.Odyssey">
		<defName>VMF_GravshipWheel</defName>
		<label>gravship wheel</label>
		<description>Connection to pipe between the normal map and the vehicle map.\nPlaced on the normal map and the vehicle map, they are connected by aligning their positions.</description>
		<thingClass>VehicleMapFramework.Building_GravshipWheel</thingClass>
		<designationCategory>VF_Vehicles</designationCategory>
		<rotatable>true</rotatable>
		<passability>Impassable</passability>
		<tickerType>Rare</tickerType>
		<blockWind>true</blockWind>
		<canOverlapZones>false</canOverlapZones>
		<graphicData>
			<texPath>VehicleMapFramework/Things/GravshipWheel/GravshipWheel</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(1,2)</drawSize>
		</graphicData>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Beauty>-1</Beauty>
			<WorkToBuild>1000</WorkToBuild>
			<Mass>1</Mass>
		</statBases>
		<size>(1,2)</size>
		<costList>
			<Steel>50</Steel>
		</costList>
		<building>
			<destroySound>BuildingDestroyed_Metal_Big</destroySound>
		</building>
		<uiOrder>1050</uiOrder>
		<disableImpassableShotOverConfigError>true</disableImpassableShotOverConfigError>
		<researchPrerequisites>
			<li>BasicGravtech</li>
		</researchPrerequisites>
		<comps>
			<li Class="CompProperties_GravshipFacility">
				<compClass>VehicleMapFramework.CompGravshipWheel</compClass>
				<requiresLOS>false</requiresLOS>
				<maxSimultaneous>200</maxSimultaneous>
				<maxDistance>200</maxDistance>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>250</basePowerConsumption>
			</li>
			<li Class = "VehicleMapFramework.CompProperties_BuildableUpgrades">
				<upgrades>
					<li Class = "Vehicles.StatUpgrade">
						<vehicleStats>
							<li>
								<def>MaximumPayload</def>
								<value>1500</value>
							</li>
						</vehicleStats>
					</li>
				</upgrades>
			</li>
		</comps>
	</ThingDef>
</Defs>