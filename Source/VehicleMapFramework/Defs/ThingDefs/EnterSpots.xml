	<ThingDef ParentName="VehicleRampBase">
		<defName>VMF_RampMedium</defName>
		<label>ramp (1x3)</label>
		<description>A ramp for vehicles to ascend and descend to a vehicle map. Vehicles up to 3 squares wide can ascend and descend from here.</description>
		<graphicData>
			<texPath>VehicleInteriors/Things/EnterSpot/RampMedium</texPath>
			<drawSize>(3,1)</drawSize>
		</graphicData>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToBuild>900</WorkToBuild>
			<Mass>45</Mass>
		</statBases>
		<size>(3,1)</size>
		<costList>
			<Steel>150</Steel>
			<ComponentIndustrial>4</ComponentIndustrial>
		</costList>
		<uiOrder>1011</uiOrder>
		<building>
			<upperMoverGraphic>
				<texPath>VehicleInteriors/Things/EnterSpot/RampMedium</texPath>
				<drawSize>(4,1)</drawSize>
			</upperMoverGraphic>
			<blueprintGraphicData>
				<texPath>VehicleInteriors/Things/EnterSpot/RampMediumBlueprint</texPath>
				<drawSize>(4,2)</drawSize>
			</blueprintGraphicData>
		</building>
	</ThingDef>

	<ThingDef ParentName="VehicleRampBase">
		<defName>VMF_RampLarge</defName>
		<label>ramp (1x5)</label>
		<description>A ramp for vehicles to ascend and descend to a vehicle map. Vehicles up to 5 squares wide can ascend and descend from here.</description>
		<graphicData>
			<texPath>VehicleInteriors/Things/EnterSpot/RampLarge</texPath>
			<drawSize>(5,1)</drawSize>
		</graphicData>
		<statBases>
			<MaxHitPoints>800</MaxHitPoints>
			<WorkToBuild>1500</WorkToBuild>
			<Mass>75</Mass>
		</statBases>
		<size>(5,1)</size>
		<costList>
			<Steel>250</Steel>
			<ComponentIndustrial>6</ComponentIndustrial>
		</costList>
		<uiOrder>1012</uiOrder>
		<building>
			<upperMoverGraphic>
				<texPath>VehicleInteriors/Things/EnterSpot/RampLarge</texPath>
				<drawSize>(6,1)</drawSize>
			</upperMoverGraphic>
			<blueprintGraphicData>
				<texPath>VehicleInteriors/Things/EnterSpot/RampLargeBlueprint</texPath>
