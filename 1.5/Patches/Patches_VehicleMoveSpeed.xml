<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationConditional">
		<success>Always</success>
		<xpath>Defs/Vehicles.VehicleStatDef[defName = "MoveSpeed"]/parts/li[@Class = "Vehicles.VehicleStatPart_WeightUsage"]</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/Vehicles.VehicleStatDef[defName = "MoveSpeed"]/parts</xpath>
			<value>
				<li Class = "VehicleInteriors.VehicleStatPart_WeightUsageWithMap">
					<operation>Multiplication</operation>
					<formatString>{0} / {1}</formatString>
					<usageCurve>
						<points>
							<li>(0, 1)</li>
							<li>(0.65, 1)</li>
							<li>(0.85, 0.9)</li>
							<li>(1.05, 0.35)</li>
							<li>(1.25, 0)</li>
						</points>
					</usageCurve>
				</li>
			</value>
		</nomatch>
		<match Class="PatchOperationInsert">
			<xpath>Defs/Vehicles.VehicleStatDef[defName = "MoveSpeed"]/parts/li[@Class = "Vehicles.VehicleStatPart_WeightUsage"]</xpath>
			<order>Append</order>
			<value>
				<li Class = "VehicleInteriors.VehicleStatPart_WeightUsageWithMap">
					<operation>Multiplication</operation>
					<formatString>{0} / {1}</formatString>
					<usageCurve>
						<points>
							<li>(0, 1)</li>
							<li>(0.65, 1)</li>
							<li>(0.85, 0.9)</li>
							<li>(1.05, 0.35)</li>
							<li>(1.25, 0)</li>
						</points>
					</usageCurve>
				</li>
			</value>
		</match>
	</Operation>
</Patch>